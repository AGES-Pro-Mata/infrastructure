# Production Environment Configuration
# Pro-Mata - AWS US East 1

# Database Configuration
POSTGRES_USER=promata_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=promata
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:5432/promata

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=1h

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
NODE_ENV=production

# Frontend Configuration
VITE_API_URL=https://api.promata.ages.pucrs.br
VITE_APP_TITLE=Pro-Mata
VITE_ENVIRONMENT=production

# AWS Configuration
AWS_REGION=us-east-1
ECS_CLUSTER=promata-prod
ECS_SERVICE_BACKEND=promata-backend
ECS_SERVICE_FRONTEND=promata-frontend

# Domain Configuration
DOMAIN_NAME=promata.ages.pucrs.br
API_DOMAIN=api.promata.ages.pucrs.br

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Email Configuration (Production)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
FROM_EMAIL=noreply@promata.ages.pucrs.br

# Security
CORS_ORIGIN=https://promata.ages.pucrs.br
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Performance
MAX_CONNECTIONS=100
POOL_SIZE=20
