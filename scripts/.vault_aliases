# Ansible Vault aliases for Pro-Mata
# Source this file: source .vault_aliases

alias vault-edit-dev='ansible-vault edit ansible/inventory/dev/group_vars/vault.yml --vault-password-file .vault_pass'
alias vault-view-dev='ansible-vault view ansible/inventory/dev/group_vars/vault.yml --vault-password-file .vault_pass'
alias vault-decrypt-dev='ansible-vault decrypt ansible/inventory/dev/group_vars/vault.yml --vault-password-file .vault_pass'
alias vault-encrypt-dev='ansible-vault encrypt ansible/inventory/dev/group_vars/vault.yml --vault-password-file .vault_pass'

# Common vault operations
alias vault-create='ansible-vault create --vault-password-file .vault_pass'
alias vault-rekey='ansible-vault rekey --vault-password-file .vault_pass'
