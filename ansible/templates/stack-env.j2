# Environment variables for Docker Stacks
# Generated by Ansible for {{ env }} environment

# Basic Configuration
ENVIRONMENT={{ env }}
PROJECT_NAME=promata
DOMAIN_NAME={{ domain_name }}

# Database Configuration
POSTGRES_DB=promata_{{ env }}
POSTGRES_USER=promata
POSTGRES_PASSWORD={{ postgres_password | default('promata_dev_password_change_me') }}
POSTGRES_REPLICA_USER=replicator
POSTGRES_REPLICA_PASSWORD={{ postgres_replica_password | default('replica_dev_password_change_me') }}

# Application Configuration
BACKEND_IMAGE=norohim/pro-mata-backend:{{ app_version | default('latest') }}
FRONTEND_IMAGE=norohim/pro-mata-frontend:{{ app_version | default('latest') }}
MIGRATE_VERSION={{ app_version | default('latest') }}
DB_VERSION={{ app_version | default('latest') }}

# Network Configuration
MANAGER_IP={{ manager_public_ip }}
WORKER_IP={{ worker_public_ip | default(manager_public_ip) }}

# SSL Configuration
ACME_EMAIL=admin@{{ domain_name }}
TRAEFIK_LOG_LEVEL=INFO

# Node Configuration
NODE_ENV={{ env }}
RUN_SEED=false

# Resource Configuration
FRONTEND_REPLICAS=2
BACKEND_REPLICAS=2
DB_REPLICAS=1

# Ports
HTTP_PORT=80
HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080
DB_PORT=5432
