# Pro-Mata Development Environment Configuration
# Copy to .env.dev and customize

# === AZURE CONFIGURATION ===
AZURE_SUBSCRIPTION_ID=${AZURE_SUBSCRIPTION_ID}
AZURE_TENANT_ID=${AZURE_TENANT_ID}
AZURE_RESOURCE_GROUP=rg-promata-dev
AZURE_LOCATION="East US 2"

# === DOMAIN & DNS CONFIGURATION ===
DOMAIN_NAME=promata-dev.duckdns.org
DUCKDNS_DOMAIN=promata-dev
DUCKDNS_TOKEN=${DUCKDNS_TOKEN}

# === APPLICATION CONFIGURATION ===
ENVIRONMENT=development
BACKEND_IMAGE=norohim/pro-mata-backend-dev:latest
FRONTEND_IMAGE=norohim/pro-mata-frontend-dev:latest
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# Replica counts
FRONTEND_REPLICAS=2
BACKEND_REPLICAS=2

# === DATABASE CONFIGURATION ===
POSTGRES_DB=promata_dev
POSTGRES_USER=promata
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_REPLICA_USER=replicator
POSTGRES_REPLICA_PASSWORD=${POSTGRES_REPLICA_PASSWORD}

# === PGBOUNCER CONFIGURATION ===
PGBOUNCER_POOL_MODE=session
PGBOUNCER_POOL_SIZE=20
PGBOUNCER_MAX_CLIENT_CONN=100

# === PGADMIN CONFIGURATION ===
PGADMIN_EMAIL=admin@promata.dev
PGADMIN_PASSWORD=${PGLADMIN_PASSWORD}

# === TRAEFIK CONFIGURATION ===
TRAEFIK_API_DASHBOARD=true
TRAEFIK_LOG_LEVEL=INFO
ACME_EMAIL=admin@promata.dev

# Traefik Dashboard Auth (htpasswd format)
# Generate with: echo $(htpasswd -nb admin yourpassword) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH_USERS=${TRAEFIK_AUTH_USERS}

# === JWT CONFIGURATION ===
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=1h

# === MONITORING CONFIGURATION ===
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
PROMETHEUS_RETENTION=15d

# === TERRAFORM VARIABLES ===
TF_VAR_ssh_public_key="ssh-rsa  promata-azure-dev"

# === DEVELOPMENT SETTINGS ===
DEBUG=true
NODE_ENV=development
LOG_LEVEL=debug

# === CORS CONFIGURATION ===
CORS_ORIGINS=https://promata-dev.duckdns.org,http://localhost:3000

# === SMTP CONFIGURATION (optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@promata.dev
SMTP_PASSWORD=app-specific-password
FROM_EMAIL=noreply@promata.dev

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# === SECURITY SETTINGS ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000