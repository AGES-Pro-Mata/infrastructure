# ============================================
# PRO-MATA - Variáveis de Ambiente
# Desenvolvimento Local
# ============================================

# === DATABASE ===
DATABASE_URL=postgresql://promata:password@localhost:5432/promata?schema=app
POSTGRES_DB=promata
POSTGRES_USER=promata
POSTGRES_PASSWORD=password123

# === BACKEND ===
BACKEND_PORT=3000
JWT_SECRET=your-secret-key-at-least-256-bits-long-change-in-production
JWT_EXPIRES_IN=2h
NODE_ENV=development
LOG_LEVEL=debug

# === FRONTEND ===
FRONTEND_URL=http://localhost:3002
VITE_API_URL=http://localhost:3000
VITE_APP_ENV=development
VITE_ENABLE_DEVTOOLS=true

# === ANALYTICS (Umami) ===
APP_SECRET=random-secret-for-umami-change-this
UMAMI_DATABASE_URL=postgresql://promata:password@localhost:5432/promata?schema=umami

# === BI (Metabase) ===
METABASE_DATABASE_URL=postgresql://promata:password@localhost:5432/promata?schema=metabase

# === EMAIL (Gmail SMTP) ===
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=promata.suporte@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here
MAIL_FROM=promata.suporte@gmail.com
MAIL_FROM_NAME=Pró-Mata Support

