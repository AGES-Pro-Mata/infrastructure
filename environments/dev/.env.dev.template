# Pro-Mata Development Environment Configuration Template
# Copy this file to .env.dev and customize the values

# === AZURE CONFIGURATION ===
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id-here
AZURE_TENANT_ID=your-azure-tenant-id-here
AZURE_RESOURCE_GROUP=rg-promata-dev
AZURE_LOCATION=East US 2

# === DOMAIN & DNS CONFIGURATION ===
DOMAIN_NAME=promata-dev.duckdns.org
DUCKDNS_DOMAIN=promata-dev
DUCKDNS_TOKEN=your-duckdns-token-here

# === APPLICATION CONFIGURATION ===
ENVIRONMENT=development
BACKEND_IMAGE=norohim/pro-mata-backend-dev:latest
FRONTEND_IMAGE=norohim/pro-mata-frontend-dev:latest
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# Replica counts
FRONTEND_REPLICAS=2
BACKEND_REPLICAS=2

# === DATABASE CONFIGURATION ===
POSTGRES_DB=promata_dev
POSTGRES_USER=promata
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_REPLICA_USER=replicator
POSTGRES_REPLICA_PASSWORD=your-secure-replica-password-here

# === PGBOUNCER CONFIGURATION ===
PGBOUNCER_POOL_MODE=session
PGBOUNCER_POOL_SIZE=20
PGBOUNCER_MAX_CLIENT_CONN=100

# === PGADMIN CONFIGURATION ===
PGADMIN_EMAIL=admin@promata.dev
PGADMIN_PASSWORD=your-secure-pgadmin-password-here

# === TRAEFIK CONFIGURATION ===
TRAEFIK_API_DASHBOARD=true
TRAEFIK_LOG_LEVEL=INFO
ACME_EMAIL=admin@promata.dev

# Traefik Dashboard Auth (htpasswd format)
# Generate with: echo $(htpasswd -nb admin yourpassword) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH_USERS=admin:$$2y$$10$$your-htpasswd-hash-here

# === JWT CONFIGURATION ===
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRES_IN=1h

# === MONITORING CONFIGURATION ===
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here
PROMETHEUS_RETENTION=15d

# === TERRAFORM VARIABLES ===
TF_VAR_ssh_public_key=ssh-rsa YOUR_SSH_PUBLIC_KEY_HERE user@host

# === DEVELOPMENT SETTINGS ===
DEBUG=true
NODE_ENV=development
LOG_LEVEL=debug

# === CORS CONFIGURATION ===
CORS_ORIGINS=https://promata-dev.duckdns.org,http://localhost:3000

# === SMTP CONFIGURATION (optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-app-password
FROM_EMAIL=noreply@promata.dev

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# === SECURITY SETTINGS ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000