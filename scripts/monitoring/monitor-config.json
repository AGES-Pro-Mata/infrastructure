{
  "monitoring": {
    "enabled": true,
    "interval": 30,
    "checks": {
      "login_attempts": {
        "enabled": true,
        "threshold": 5,
        "window": 300
      },
      "file_changes": {
        "enabled": true,
        "paths": [
          "/etc/passwd",
          "/etc/shadow",
          "/etc/ssh/sshd_config",
          "/etc/nginx/nginx.conf"
        ]
      },
      "processes": {
        "enabled": true,
        "suspicious_patterns": [
          "nc.*-l",
          "ncat.*-l",
          "socat",
          "wget.*http.*sh",
          "curl.*|.*sh"
        ]
      },
      "network": {
        "enabled": true,
        "max_connections_per_ip": 50,
        "expected_ports": [22, 80, 443, 3000, 5000, 5432, 6379]
      },
      "resources": {
        "enabled": true,
        "thresholds": {
          "cpu": 90,
          "memory": 90,
          "disk": 85
        }
      }
    },
    "alerts": {
      "cooldown": 300,
      "channels": {
        "discord": {
          "enabled": false,
          "webhook_url": ""
        },
        "email": {
          "enabled": false,
          "smtp_host": "",
          "smtp_port": 587,
          "from": "",
          "to": []
        },
        "slack": {
          "enabled": false,
          "webhook_url": ""
        }
      }
    },
    "logging": {
      "level": "INFO",
      "retention_days": 30,
      "max_log_size": "100MB"
    }
  }
}
